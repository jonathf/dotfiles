#!/usr/bin/env bash
set -e

CLIP_TIMEOUT=20000  # seconds/1000 before clipboard is cleared again
AUTOTYPE_WAIT=0.2   # seconds pause before autotyping
AUTOTYPE_SPEED=8  # seconds/10 used to autotype user/pw

prefix=${PASSWORD_STORE_DIR-~/.password-store}
selected="$@"
domain=$(dirname $selected)
username=$(basename $selected)
choices="autotype password $username $domain"
action=$(printf "%s\n" $choices | dmenu -l 20 -fn "Ubuntu Mono-14:normal")

if [ ! -f "$prefix/$domain/$username.gpg" ]; then
  username_="$(ls $prefix/$domain/$username*.gpg)"
  username_="${username_#$prefix/$domain/}"
  username_="${username_%.gpg}"
else
  username_="$username"
fi

if [ "$action" = "password" ]; then
  pass show "$domain/$username_" | sed -e 's/\n//' | xsel -p -t $CLIP_TIMEOUT
  pass show "$domain/$username_" | sed -e 's/\n//' | xsel -b -t $CLIP_TIMEOUT

else if [ "$action" = "$username" ]; then
  printf "$username_" | xsel -p -t $CLIP_TIMEOUT
  printf "$username_" | xsel -b -t $CLIP_TIMEOUT

else if [ "$action" = "$domain" ]; then
  printf "$domain" | xsel -p -t $CLIP_TIMEOUT
  printf "$domain" | xsel -b -t $CLIP_TIMEOUT

else if [ "$action" = "autotype" ]; then
  sleep $AUTOTYPE_WAIT
  printf "$username_" | xdotool type --delay $AUTOTYPE_SPEED --clearmodifiers --file -
  xdotool key Tab
  pass show "$domain/$username_" | sed -e 's/\n//' | xdotool type --delay $AUTOTYPE_SPEED --clearmodifiers --file -

fi fi fi fi
