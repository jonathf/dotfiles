[push]
    default = current
[fetch]
    prune = true
[core]
    excludesfile = ~/.gitignore
    autocrlf = input
    filemode = false
    pager = less --LONG-PROMPT --chop-long-lines --tabs=4 --jump-target=3 --ignore-case --status-column
[interactive]
    diffFilter = delta --color-only
[pager]
    diff = delta
[delta]
    features = line-numbers diff-so-fancy navigate
    line-numbers-left-format = "{nm:>3}"
    line-numbers-right-format = "{np:>3} "
[alias]
    ll = log --pretty=format:"%C(yellow)%h%Creset\\ %C(green)%ar%C(cyan)%d\\ %Creset%s%C(yellow)\\ [%cn]" --graph --decorate --all
    edit = "!$EDITOR `git ls-files -m | uniq` -c '/\\v^[<=>|]{7}( |$)'"
    prune = "!f() { git branch -d $(git branch --merged=\"$1\" | grep -v \"$1\") \
    git fetch --prune }; f"
    add-all = "!git add `git ls-files -m | uniq`"
[pull]
    rebase = true
[merge]
    conflictstyle=diff3
[init]
    templatedir = ~/.git_template
[commit]
    gpgsign = true
[tag]
    forceSignAnnotated = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[gpg]
    program = gpg
[color]
    ui = auto
[color "branch"]
    current = yellow
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    untracked = dim
    added = green
    changed = cyan
